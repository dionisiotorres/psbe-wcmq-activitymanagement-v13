<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<record id="view_event_form_inherit_ticket" model="ir.ui.view">
    <field name="name">event.wcmq.website.event.sale.inherit.form</field>
    <field name="model">event.event</field>
    <field name="inherit_id" ref="event_sale.view_event_form_inherit_ticket"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='event_ticket_ids']/tree/field[@name='product_id']" position="after">
            <field name="ticket_type" required="1"/>
        </xpath>
        <!-- <xpath expr="//field[@name='event_ticket_ids']/form/field[@name='product_id']" position="after">
            <field name="ticket_type" required="1"/>
        </xpath> -->
    </field>
</record>

<record id="event_ticket_form_view" model="ir.ui.view">
    <field name="name">event.event.ticket.wcmq.website.event.sale.inherit.form</field>
    <field name="model">event.event.ticket</field>
    <field name="inherit_id" ref="event_sale.event_ticket_form_view"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='event_id']" position="after">
            <field name="ticket_type" required="1"/>
        </xpath>
    </field>
</record>

</odoo>
